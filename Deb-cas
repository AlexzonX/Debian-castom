mkdir kde-live
cd kde-live
sudo lb config
####3
sudo lb config \
  --distribution bookworm \
  --architectures amd64 \
  --debian-installer live \ #дает возможность скачать
  --packages-lists kde-desktop \
  --bootappend-live "boot=live components quiet splash" \
  --compression none #убирает сжатие
#####
nano config/package-lists/kde-desktop.list.chroot < "kde-plasma-desktop
sddm
konsole
dolphin
plasma-nm
network-manager
nano
xorg
xserver-xorg" 
#######
sudo lb build
